<!-- Method Documentation URL: http://dev.desk.com/API/customers/#list -->
<template name="listCustomers" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="page" description="The page number of the returned page."/>
    <parameter name="perPage" description="The number of entries per page."/>
    <parameter name="avatarSize"
               description="If provided, for Facebook and Gravatar, the returned avatar URL will have a square image with width and height equal to the given value."/>
    <sequence>
        <property name="uri.var.page" expression="$func:page"/>
        <property name="uri.var.perPage" expression="$func:perPage"/>
        <property name="uri.var.avatarSize" expression="$func:avatarSize"/>
        <script language="js">
            <![CDATA[
            var page = mc.getProperty('uri.var.page');
            var perPage = mc.getProperty('uri.var.perPage');
            var avatarSize = mc.getProperty('uri.var.avatarSize');
            var urlQuery = ''+ mc.getProperty('uri.var.urlQuery');
            if (page != null && page != "") {
                urlQuery += 'page=' + page + '&';
            }
            if (perPage != null && perPage != "") {
                urlQuery += 'per_page=' + perPage + '&';
            }
            if (avatarSize != null && avatarSize != "") {
                urlQuery += 'avatar_size=' + avatarSize + '&';
            }
            // Add a leading '?' and remove the trailing '&'
            if (urlQuery != "") {
                urlQuery = '?' + urlQuery.toString().substring(0, urlQuery.toString().lastIndexOf("&"));
                mc.setProperty('uri.var.urlQuery', urlQuery);
            }
         ]]>
        </script>
        <call>
            <endpoint>
                <http method="get" uri-template="{+uri.var.apiUrl}/customers{+uri.var.urlQuery}"/>
            </endpoint>
        </call>
        <!-- Remove custom Headers from the API Response -->
        <header name="X-Runtime" action="remove" scope="transport"/>
        <header name="X-Rate-Limit-Limit" action="remove" scope="transport"/>
        <header name="X-UA-Compatible" action="remove" scope="transport"/>
        <header name="X-Rate-Limit-Remaining" action="remove" scope="transport"/>
        <header name="X-Request-Id" action="remove" scope="transport"/>
        <header name="X-Rack-Cache" action="remove" scope="transport"/>
        <header name="Status" action="remove" scope="transport"/>
        <header name="Cache-Control" action="remove" scope="transport"/>
        <header name="X-Frame-Options" action="remove" scope="transport"/>
        <header name="X-Rate-Limit-Reset" action="remove" scope="transport"/>
        <header name="X-AppVersion" action="remove" scope="transport"/>
        <header name="X-Powered-By" action="remove" scope="transport"/>
    </sequence>
</template>